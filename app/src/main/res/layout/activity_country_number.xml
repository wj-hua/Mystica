<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">
    <Button
        android:id="@+id/returnToMainActivity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/backx"
        />
    <TextView
        android:id="@+id/chooseCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/returnToMainActivity"
        android:layout_marginTop="10dp"
        android:text="选择国家或区号"
        android:textSize="35sp"
        android:paddingLeft="40dp"
        />
    <ListView
        android:layout_below="@+id/chooseCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_country"/>

</RelativeLayout>