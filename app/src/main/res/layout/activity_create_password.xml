<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用、网址名称:"
        android:textSize="15sp"
        android:textColor="@color/smssdk_black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/et_password_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_password_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号:"
        android:textSize="15sp"
        android:textColor="@color/smssdk_black"
        app:layout_constraintTop_toBottomOf="@+id/et_password_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_password_name"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_password_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_user_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_password_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="15sp"
        android:textColor="@color/smssdk_black"
        app:layout_constraintTop_toBottomOf="@+id/et_password_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_password_name"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_password_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/bt_create_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="点击创建密码"
        android:textSize="18sp"
        android:textColor="@color/smssdk_black"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_password_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注:"
        android:textSize="15sp"
        android:textColor="@color/smssdk_black"
        app:layout_constraintTop_toBottomOf="@+id/bt_create_password"
        app:layout_constraintLeft_toLeftOf="@+id/tv_password_name"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_password_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_note"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/bt_save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textSize="18sp"
        android:textColor="@color/smssdk_black"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_note"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>